  },
  "bugs": {
    "url": "https://github.com/onderonur/react-infinite-scroll-hook/issues"
  },
  "keywords": [
    "react",
    "react-hooks",
    "infinite-scroll",
    "react-component"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "./index.d.ts",
  "files": [
